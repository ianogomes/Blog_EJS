        <div class="hero">
            <div id="text">
                <h1>Posts</h1>
                <ol id="links">
                    <% for (let post of list){ %> 
                        <% var link = "/" + post.id; %>
                        <li>
                            <a class="nav-link" href= <%= link %>><%= post.title %></a> <%# actual output %> 
                        </li>
                    <% } %>
                </ol>
            </div>
        </div>
    </div>
</section>

